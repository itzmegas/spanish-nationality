---
import PageLayout from "@/layouts/PageLayout.astro";
---

<PageLayout>
  <div id="container">
    <section>
      <div class="grid grid-cols-2 gap-4">
        <a href="/exam" class="font-bold text-2xl">
          <div
            class="p-20 rounded-lg overflow-hidden bg-white shadow-sm cursor-pointer active:shadow-lg"
          >
            Nuevo examen
          </div>
        </a>
        <a href="/questions" class="font-bold text-2xl">
          <div
            class="p-20 rounded-lg overflow-hidden bg-white shadow-sm cursor-pointer active:shadow-lg"
          >
            Preguntas
          </div>
        </a>
        <a href="/exam" class="font-bold text-2xl">
          <div
            class="p-20 rounded-lg overflow-hidden bg-white shadow-sm cursor-pointer active:shadow-lg"
          >
            Examenes realizados
          </div>
        </a>
      </div>
    </section>
  </div>
</PageLayout>

<style>
  #container {
    font-family:
      Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
      sans-serif;
  }
</style>
